<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="radar-title">
    <div class="logo">
      <a alt="Indix Logo" href="https://www.indix.com">
        <img src="https://www.indix.com/wp-content/themes/indix2015/images/logo.png" title="">
      </a>
    </div>
    <div id="header-title" class="radar-title__text">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
      </h1>
      <h2 id="subtitle-wrap">
      <% site.posts.forEach(function(post){ %>
        <a class="button" href="<%- url_for(post.path) %>"><%= post.title %></a>
      <% }) %>
      </h2>
    </div>
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
      </nav>
      <nav id="sub-nav">
        <% if (theme.rss){ %>
          <a id="nav-rss-link" class="nav-icon" href="<%- theme.rss %>" title="<%= __('rss_feed') %>"></a>
        <% } %>
      </nav>
    </div>
  </div>
</header>